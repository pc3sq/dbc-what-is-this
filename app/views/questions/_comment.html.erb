<div class="comment col-center col-10">

<div class="comment-header">
  <h4><%= link_to user_path(comment.user) do %><%= comment.user.name.capitalize %><% end %> <em>@ <%= comment.created_at.strftime("%-d %b %Y, %H:%M") %></em></h4>

  <% if comment.user.id == session[:current_user] %>
    <ul class="comment-menu">
      <li>
        <%= link_to edit_comment_path(comment) do %>
          <i class="fa fa-edit"></i> Edit
        <% end %>
      </li>
      <li>
        <%= link_to comment, method: :delete, data: {confirm: "You sure bub?" } do %>
          <i class="fa fa-trash"></i> Delete
        <% end %>
      </li>
    </ul>
  <% end %>
</div>

  <p><%= comment.body %></p>

</div>
